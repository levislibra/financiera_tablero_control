<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="financiera_prestamo_report_view" model="ir.ui.view">
        <field name="name">Reporte de Prestamos</field>
        <field name="model">financiera.prestamo.report</field>
        <field name="arch" type="xml">
          <form>
						<sheet>
							<group>
								<field name="date_init"/>
								<field name="date_finish"/>
							</group>
						</sheet>
						<footer>
								<button name="print_report" string="Imprimir" class="oe_highlight" type="object"/>
								<button string="Cancel" class="oe_link" special="cancel"/>
						</footer>
				</form>
        </field>
    </record>

    <record id="financiera_prestamo_report_menu" model="ir.actions.act_window">
        <field name="name">Reporte de Prestamos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">financiera.prestamo.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="financiera_prestamo_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_prestamos_report"
        name="Reporte de Prestamos PDF (Beta)"
        parent="menu_prestamos_reportes"
				sequence="300"
        action="financiera_prestamo_report_menu"/>

    <record id="action_prestamos_report_values1" model="ir.values">
        <field name="model_id" ref="financiera_prestamos.model_financiera_prestamo" />
        <field name="name">Reporte de Prestamos</field>
        <field name="key2">client_print_multi</field>
        <field name="value" eval="'ir.actions.act_window,' +str(ref('financiera_prestamo_report_menu'))" />
        <field name="key">action</field>
        <field name="model">financiera.prestamo</field>
    </record>

</odoo>
