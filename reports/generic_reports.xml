<?xml version="1.0" encoding="utf-8"?>
<!--Custom report-->
<openerp>
<data>

		<!-- Reporte de Prestamos PDF -->
		<report 
			id="prestamo_report_pdf"
			model="financiera.prestamo"
			string="Prestamos - Reporte PDF"
			report_type="qweb-pdf"
			name="financiera_tablero_control.prestamo_report_pdf_view"
			file="financiera_tablero_control.prestamo_report_pdf_view"
		/>
		<record id="financiera_tablero_control.prestamo_report_pdf" model="ir.actions.report.xml">
			<field name="attachment_use" eval="False"/>
		</record>

		<template id="prestamo_report_pdf_view">
			<t t-call="report.html_container">
				<t t-if="not o and doc">
					<t t-set="o" t-value="doc"/>
				</t>
				<t t-if="o and 'company_id' in o">
						<t t-set="company" t-value="o.company_id"/>
				</t>
				<t t-if="not o or not 'company_id' in o">
						<t t-set="company" t-value="res_company"/>
				</t>
				<div class="header">
					<div class="row">
							<div class="col-xs-3">
									<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
							</div>
							<div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
					</div>
					<div class="row zero_min_height">
							<div class="col-xs-12">
									<div style="border-bottom: 1px solid black;"/>
							</div>
					</div>
				</div>
				<div class="page" style="font-size:16px;">
					<div align="center" style="font-size:16px;">
							<b>Reporte de prestamos</b>
					</div>
					<!-- <div class="col-xs-4">
						<p>
								<t t-if="data['date_init']"><strong>Fecha desde:</strong><span t-esc="data['date_init']"/><br/></t>
								<t t-if="data['date_finish']"><strong>Fecha hasta:</strong><span t-esc="data['date_finish']"/></t>
						</p>
					</div> -->
					<table style="width:100%;">
							<tr>
								<th style="vertical-align:middle">
										<table class="table table-hover table-striped">
												<thead>
													<tr>
														<th>Prestamo Nro</th>
														<th>Fecha</th>
														<th>Monto</th>
													</tr>
												</thead>
												<tbody class="invoice_tbody">
													<t t-foreach="docs" t-as="o">
														<tr style="font-size:16px;">
															<td><span t-field="o.name"/></td>
															<td><span t-field="o.fecha"/></td>
															<td><span t-field="o.monto_solicitado"/></td>
														</tr>
													</t>
												</tbody>
										</table>
								</th>
							</tr>
					</table>
				</div>
		</t>
	</template>

	<!-- Reporte de saldo de clientes en PDF -->
	<report
		id="partner_report_pdf"
		model="res.partner"
		string="Clientes - Reporte de saldos PDF"
		report_type="qweb-pdf"
		name="financiera_tablero_control.partner_report_pdf_view"
		file="financiera_tablero_control.partner_report_pdf_view"
	/>
	<record id="financiera_tablero_control.partner_report_pdf" model="ir.actions.report.xml">
		<field name="attachment_use" eval="False"/>
	</record>

	<template id="partner_report_pdf_view">
		<t t-call="report.html_container">
			<t t-if="not o and doc">
				<t t-set="o" t-value="doc"/>
			</t>
			<t t-if="o and 'company_id' in o">
					<t t-set="company" t-value="o.company_id"/>
			</t>
			<t t-if="not o or not 'company_id' in o">
					<t t-set="company" t-value="res_company"/>
			</t>
			<div class="header">
				<div class="row">
						<div class="col-xs-3">
								<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
						</div>
						<div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
				</div>
				<div class="row zero_min_height">
						<div class="col-xs-12">
								<div style="border-bottom: 1px solid black;"/>
						</div>
				</div>
			</div>
			<div class="page" style="font-size:16px;">
				<div align="center" style="font-size:16px;">
						<b>Saldo de clientes</b>
				</div>
				<!-- <div class="col-xs-4">
					<p>
							<t t-if="data['balance_date']"><strong>Fecha desde:</strong><span t-esc="data['balance_date']"/><br/></t>
					</p>
				</div> -->
				<table style="width:100%;">
						<tr>
							<th style="vertical-align:middle">
								<table class="table table-hover table-striped">
										<thead>
											<tr>
												<th>Cliente</th>
												<th>Identificacion</th>
												<th>Saldo vencido</th>
												<th>Facturado sobre vencido</th>
												<th>Saldo no vencido</th>
												<th>Saldo total</th>
											</tr>
										</thead>
										<tbody class="invoice_tbody">
											<t t-foreach="docs" t-as="o">
												<tr style="font-size:16px;">
													<td><span t-field="o.name"/></td>
													<td><span t-field="o.main_id_number"/></td>
													<td><span t-field="o.saldo_vencido"/></td>
													<td><span t-field="o.facturado_sobre_saldo_vencido"/></td>
													<td><span t-field="o.saldo_no_vencido"/></td>
													<td><span t-field="o.saldo_total"/></td>
												</tr>
											</t>
										</tbody>
								</table>
							</th>
						</tr>
				</table>
			</div>
	</t>
	</template>


</data>
</openerp>